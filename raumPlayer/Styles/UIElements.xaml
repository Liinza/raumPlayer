                        <Rectangle x:Name="OuterBorder" Fill="{ThemeResource ToggleSwitchFillOff}" Height="20" Grid.Row="2" Stroke="{ThemeResource ToggleSwitchStrokeOff}" StrokeThickness="2" Width="34"/>
